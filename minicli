#! /usr/bin/php
<?php

declare(strict_types=1);

use JesusValera\App\Command\HelloController;
use JesusValera\Minicli\App;
use JesusValera\Minicli\IO\CliPrinter;

require __DIR__ . '/vendor/autoload.php';

if ('cli' !== php_sapi_name()) {
    exit();
}

$printer = new CliPrinter();
$app = new App();

$app->registerCommand('help', function () use ($printer) {
    $printer->display('usage: minicli hello [ your-name ]');
});

$app->registerController('hello', new HelloController($printer));

try {
    $app->runCommand($argv);
} catch (Exception $exception) {
    $printer->display($exception->getMessage());
}
